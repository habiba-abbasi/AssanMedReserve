<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/colorWhite"
        tools:context="com.hackathon18.maverick.ui.activity.LoginActivity">

        <LinearLayout
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backBt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/back_button"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                />
            <!--<Button-->
            <!--android:id="@+id/backBt"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:background="@drawable/back_button"-->
            <!--android:layout_marginLeft="10dp"-->

            <!--/>-->



        </LinearLayout>
        <LinearLayout
            android:id="@+id/line"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_below="@id/actionBar"
            android:layout_height="2dp"
            android:weightSum="3"
            android:background="#f9f8f5">
        </LinearLayout>
        <TextView
            android:id="@+id/txtlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_screen_opt_1"
            android:layout_below="@id/line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textSize="35dp"
            />


        <EditText
            android:id="@+id/etLoginUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_below="@id/txtlogin"
            android:layout_marginTop="500dp"
            android:inputType="text"
            android:hint="Enter Username or Email Id"
            />

        <EditText
            android:id="@+id/etLoginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_below="@id/etLoginUsername"
            android:layout_margin="20dp"

            android:hint="Enter Password"/>

        <Button
            android:text="@string/home_screen_opt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btLogin_Login"
            android:textSize="25sp"
            android:padding="20dp"
            android:layout_below="@id/etLoginPassword"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</layout>